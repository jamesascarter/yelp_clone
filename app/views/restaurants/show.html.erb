<p><%= @restaurant.name %></p>
<p><%= @restaurant.description %></p>
<p><%= @restaurant.rating %></p>

<h4>Reviews for <%= @restaurant.name %></h4>
<% if @restaurant.reviews.any? %>
  <ul>
    <% @restaurant.reviews.each do |review| %>
    <li>
      <%= review.thoughts %>, <strong><%= review.rating %></strong>/5
    </li>
    <% end %>
  </ul>
<% else %>
  <p>No reviews.</p>
<% end %>
